{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": ".",            // Use current directory as the root
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types", "./@types"]  // Corrected path
    },
    "include": ["*.ts"],
    "exclude": ["node_modules", "dist"]
  }